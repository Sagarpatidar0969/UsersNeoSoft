pipeline {
    agent any

    tools {
        jdk 'JDK17'
        maven 'Maven3'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Backend') {
            steps {
                dir('user') {          // ğŸ‘ˆ yahin pom.xml hai
                    bat 'mvn clean package'
                }
            }
        }
    }

    post {
        success {
            echo 'âœ… Backend build successful'
            archiveArtifacts 'user/target/*.jar'
        }
        failure {
            echo 'âŒ Backend build failed'
        }
    }
}
