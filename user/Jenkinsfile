pipeline {
    agent any

    tools {
        jdk 'JDK17'
        maven 'Maven3'
    }

    environment {
        JAR_PATH = 'user/target/user-0.0.1-SNAPSHOT.jar'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Backend') {
            steps {
                dir('user') {
                    bat 'mvn clean package'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Backend build successful'
            archiveArtifacts artifacts: 'user/target/*.jar', fingerprint: true
        }
        failure {
            echo '❌ Backend build failed'
        }
    }
}
